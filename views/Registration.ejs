<body>


	<div class="container-login100" style="background-image: url('images/da.jpeg');">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
			<form id="signupForm" class="login100-form">
				<span style="margin-top: -50px;" class="login100-form-title p-b-37">
					Sign Up
				</span>

				<div style="margin-top: -10px;" class="wrap-input100 validate-input m-b-20"
					data-validate="Enter username">
					<input class="input100" type="text" name="userName" placeholder="Username">
					<span class="focus-input100"></span>
				</div>


				<div class="wrap-input100 validate-input m-b-20" data-validate="Enter  email">
					<input class="input100" type="text" name="emailId" id="emailId" onblur="validateDomain()"
						placeholder="Email">
					<span class="focus-input100"></span>
				</div>


				<div class="wrap-input100 validate-input m-b-20" data-validate="Please Select Any Option">
					<select Text="Select" id="batchId" class="input100" name="batchId" style="font-family: SourceSansPro-Bold;
					font-size: 16px;
					color: #4b2354;
					line-height: 1.2;
					display: block;
					width: 100%;
					height: 62px;
					padding: 5px;
					border: none;
					background: transparent;">
						<option value="">Select</option>
                        <%for( var i=0;i<JSON.parse(data).length;i++){%>
						<option value="<%=JSON.parse(data)[i].batchId%>"> <%=JSON.parse(data)[i].batchName%></option>
					  <%}%>
					</select>
					<span class="focus-input100"></span>
				</div>


				<div class="wrap-input100 validate-input m-b-25" data-validate="Enter password">
					<input class="input100" type="password" name="password" placeholder="Password">
					<span class="focus-input100"></span>
				</div>


				<div class="wrap-inputmo validate-input m-b-25" data-validate="Enter MobileNumber">
					<input class="input100 inputmo" type="text" id="txtMobile" maxlength="10"
						onblur="MobileNumberChecker()" name="mobileNo" placeholder="MobileNumber">
					<span class="focus-input100"></span>
				</div>

				<div class="container-login100-form-btn" style="display:none">
					<button class="login100-form-btn">
						Send OTP
					</button>
				</div>
				<br>

				<div class="wrap-inputmo validate-input m-b-25" data-validate="Enter OTP" style="display:none">
					<input class="input100 inputmo" pattern="^[0-9]*$" type="text" id="txtMobile" maxlength="10"
						name="OTP" placeholder="OTP">
					<span class="focus-input100"></span>
				</div>


				<div class="container-login100-form-btn">
					<button class="login100-form-btn" id="signupButton">
						Sign Up
					</button>
				</div>

				<br>
				<div class="text-center">
					<a href="Login" class="txt2 hov1">
						Sign in
					</a>
				</div>
			</form>


		</div>
	</div>
